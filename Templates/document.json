    "hasRevisionHistory": true,
    "isAbstract": false,
    "isSearchable": true,
    "namespace": custom_FIRMNAM_documents_DOCTYPE
  },
  "mixins": {
    "active": [
      {
        "displayName": "Entity",
        "entityId": "11111111-0000-0000-0000-000000000000"
